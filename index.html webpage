    <script>
        // Dynamic Year
        document.getElementById('year').textContent = new Date().getFullYear();

        // Contact Button Interaction
        const contactBtn = document.getElementById('contactBtn');
        
        contactBtn.addEventListener('click', function() {
            // In a real scenario, this would open a modal or form
            // For this static profile, we simulate an action
            const email = "ksalisbury@cwc.edu";
            const subject = "Inquiry from CWC Profile";
            const body = "Hello Kristy,\n\nI would like to connect regarding the Talent Search program...";
            
            // Construct mailto link
            const mailtoLink = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            
            // Trigger the mail client
            window.location.href = mailtoLink;
            
            // Visual feedback
            this.textContent = "Opening Email Client...";
            this.style.backgroundColor = "#003366";
            
            setTimeout(() => {
                this.textContent = "Send a Message";
                this.style.backgroundColor = ""; // Reset to CSS default
            }, 2000);
        });
    </script>
